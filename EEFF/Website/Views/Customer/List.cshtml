@inherits System.Web.Mvc.WebViewPage<IEnumerable<Website.Models.CustomerModel>>

@{
    View.Title = "List";
    LayoutPage = "~/Views/Shared/_Layout.cshtml";
}

    <h2>List</h2>

    <table>
        <tr>
            <th></th>
            <th>
                CustomerId
            </th>
            <th>
                Name
            </th>
            <th>
                BirthDate
            </th>
        </tr>

    @foreach (var item in Model) {
    
        <tr>
            <td>
                @Html.ActionLink("ChangeName", "ChangeName", new { customerId=item.CustomerId }) |
            </td>
            <td>
                @item.CustomerId
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @String.Format("{0:g}", item.BirthDate)
            </td>
        </tr>
    
    }

    </table>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>


